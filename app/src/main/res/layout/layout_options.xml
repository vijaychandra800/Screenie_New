<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_hideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_peekHeight="50dp"
        app:behavior_hideable="false"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:id="@+id/ll_option_toggle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_option_toggle2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_up1"
                android:layout_marginBottom="-28dp"
                android:contentDescription="@string/image" />

            <ImageView
                android:id="@+id/iv_option_toggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:src="@drawable/arrow_up1"
                android:contentDescription="@string/image" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_option"
                android:layout_marginTop="50dp"
                >

                <TextView
                    android:id="@+id/tv_details_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                   />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_op_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/views"
                            android:textFontWeight="1"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_wall_details_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/line_vertical" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/downloads"
                            android:textFontWeight="1"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_wall_details_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>



                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/line_vertical" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ratings"
                            android:textFontWeight="1"
                            android:textColor="@color/white" />

                        <RatingBar
                            android:id="@+id/rating_wall_details"
                            style="@style/RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:numStars="5"
                            android:theme="@style/RatingBar1" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_op_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_hide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_setas"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingTop="5dp"
                                android:src="@mipmap/set_wall" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textFontWeight="1"
                                android:text="@string/set_wallpaper"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_vertical" />

                        <LinearLayout
                            android:id="@+id/ll_rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingTop="5dp"
                                android:src="@mipmap/rate_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="@string/rate"
                                android:textFontWeight="1"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_vertical" />

                        <LinearLayout
                            android:id="@+id/download_hd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingTop="5dp"
                                android:src="@mipmap/download" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Download"
                                android:textFontWeight="1"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_vertical" />

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_download"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingTop="5dp"
                                android:src="@mipmap/download" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="@string/save"
                                android:textFontWeight="1"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_vertical" />

                        <LinearLayout
                            android:id="@+id/ll_share"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="45dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingTop="5dp"
                                android:src="@mipmap/share" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="@string/share"
                                android:textFontWeight="1"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_op_vertical" />

                    <LinearLayout
                        android:id="@+id/ll_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tags"
                            android:textFontWeight="1"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_tags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_op_vertical" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/resolution"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_details_resolution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_vertical" />

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/size"
                                android:textColor="@color/text" />

                            <TextView
                                android:id="@+id/tv_details_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_light"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_op_vertical" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:fillViewport="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Download "
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    />

                                <Button
                                    android:id="@+id/app1"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_apps"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:layout_marginRight="8dp"
                                    android:text="Icons"

                                    android:textColor="@color/white"/>

                                <Button
                                    android:id="@+id/app2"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_apps"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:layout_marginRight="8dp"
                                    android:text="Icons"
                                    android:visibility="gone"
                                    android:textColor="@color/white"/>

                                <Button
                                    android:id="@+id/app3"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_apps"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:layout_marginRight="8dp"
                                    android:text="Icon Pack"
                                    android:visibility="gone"
                                    android:textColor="@color/white"/>
                                <Button
                                    android:id="@+id/app4"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_apps"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:layout_marginRight="8dp"
                                    android:text="Icons"
                                    android:visibility="gone"
                                    android:textColor="@color/white"/>
                                <Button
                                    android:id="@+id/app5"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_apps"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:layout_marginRight="8dp"
                                    android:text="Icons"
                                    android:visibility="gone"
                                    android:textColor="@color/white"/>

                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <com.like.LikeButton
                    android:id="@+id/fav_report"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toStartOf="@+id/button_wall_fav"
                    android:layout_toLeftOf="@+id/button_wall_fav"
                    app:icon_size="33dp"
                    app:is_enabled="true"
                    app:like_drawable="@mipmap/report"
                    app:unlike_drawable="@mipmap/report" />

                <com.like.LikeButton
                    android:id="@+id/button_wall_fav"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    app:anim_scale_factor="2"
                    app:circle_end_color="@color/colorAccent"
                    app:circle_start_color="@color/red"
                    app:dots_primary_color="@color/colorPrimary"
                    app:dots_secondary_color="@color/red"
                    app:icon_size="35dp"
                    app:is_enabled="true"
                    app:like_drawable="@mipmap/fav_hover_a"
                    app:unlike_drawable="@mipmap/fav_a" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>